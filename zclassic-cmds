alias ll='ls -alF'

if [[ -z $ZCLASSIC_CONFIG_DIR ]]
then
    export =~/.zclassic
fi
if ! [[ -d $ZCLASSIC_CONFIG_DIR ]]
then
    mkdir -p $ZCLASSIC_CONFIG_DIR
    chmod 777 $ZCLASSIC_CONFIG_DIR
fi

if [[ -z $WALLET_DIR ]]
then
    export WALLET_DIR=~/wallet
fi
if ! [[ -d $ZCLASSIC_CONFIG_DIR ]]
then
    mkdir -p $ZCLASSIC_CONFIG_DIR
    chmod 777 $ZCLASSIC_CONFIG_DIR
fi

# ZClassic aliases
alias zcl-help='cat %CMDS_DIR%/zclassic-cmds-help'
alias zcl-balance='echo "Total balance:" && zcash-cli z_gettotalbalance && echo "Unspent (public coins):" && zcash-cli listunspent'
alias zcl-exportwallet='echo "Exporting wallet..." && zcash-cli z_exportwallet ${WALLET_DIR}/wallet.txt && echo && echo "Wallet saved in ${WALLET_DIR}/wallet.txt"'
alias zcl-showwallet='zcl-exportwallet && cat ${WALLET_DIR}/wallet.txt'
alias zcl-transactions='zcash-cli listtransactions'
alias zcl-transaction='zcash-cli gettransaction'
alias zcl-listaddrs='echo "Anonymous addresses:" && zcash-cli z_listaddresses && echo "Unspent:" && zcash-cli listunspent && echo "Received by addresses:" && zcash-cli listreceivedbyaddress 0 true'
alias zcl-status='zcl-listaddrs && echo && zcl-balance && echo && echo "Blockchain info:" && zcash-cli getinfo' 
alias zcl-newaddr='zcash-cli getnewaddress'
alias zcl-newzaddr='zcash-cli z_getnewaddress'
alias zcl-send='%CMDS_DIR%/send.sh'
alias zcl-config='cat ${ZCLASSIC_CONFIG_DIR}/zclassic.conf'
alias zcl-connections='zcash-cli getpeerinfo'
alias zcl-operations='echo "Operations status:" && zcash-cli z_getoperationstatus'
alias zcl-logs='tail ${ZCLASSIC_CONFIG_DIR}/debug.log'
alias zcl-stop='zcash-cli stop'
